{
  // General
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorCustomizations": {
    "[Atom One Dark]": {
      "focusBorder": "#00000000"
    },
    "[Nord]": {
      "activityBar.border": "#3b4252",
      "activityBarBadge.background": "#81a1c1",
      "activityBarBadge.foreground": "#eceff4",
      "list.activeSelectionForeground": "#eceff4",
      "list.activeSelectionBackground": "#474e5ecc"
    }
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.list.openMode": "doubleClick",
  "telemetry.telemetryLevel": "off",

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "editor.fontSize": 13,
  "editor.fontFamily": "'Source Code Pro', 'Hack Nerd Font Mono', monospace",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.smoothScrolling": true,

  "files.eol": "\n",
  "files.insertFinalNewline": true,

  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "git.rebaseWhenSync": true,

  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.allowChords": false,

  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, Inter, sans-serif",

  // Extensions
  "gitlens.hovers.currentLine.over": "annotation",
  "prettier.arrowParens": "always",
  "go.autocompleteUnimportedPackages": true,

  // Theme and colors
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#616e88",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.saturation": 0.6,

  // Languages
  "[shellscript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },

  "[toml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  }
}
