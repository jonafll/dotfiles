{
  // General
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorCustomizations": {
    "[Nord]": {
      "focusBorder": "#00000000",
      "activityBar.border": "#3b4252",
      "activityBarBadge.background": "#81a1c1",
      "activityBarBadge.foreground": "#eceff4",
      "list.activeSelectionBackground": "#3b4252",
      "list.activeSelectionForeground": "#eceff4",
      "list.focusBackground": "#3b4252",
      "list.focusForeground": "#eceff4",
      "list.inactiveSelectionBackground": "#3b4252",
      "list.inactiveSelectionForeground": "#eceff4",
      "sideBarSectionHeader.background": "#2e3440",
      "sideBarSectionHeader.border": "#3b4252"
    }
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.list.openMode": "doubleClick",
  "workbench.editor.labelFormat": "short",
  "telemetry.telemetryLevel": "off",

  "window.commandCenter": true,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "editor.fontSize": 13,
  "editor.fontFamily": "'Source Code Pro', 'Hack Nerd Font Mono', monospace",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.smoothScrolling": true,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "explorer.compactFolders": false,

  "files.eol": "\n",

  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.shellIntegration.enabled": false,

  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, Inter, sans-serif",

  // Extensions

  // Theme and colors
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#616e88",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.saturation": 0.6,

  // GitLens
  "gitlens.hovers.currentLine.over": "annotation",

  // Prettier
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "prettier.bracketSpacing": true,
  "prettier.bracketSameLine": true,

  // Go
  "go.toolsManagement.checkForUpdates": "local",
  "go.toolsManagement.autoUpdate": true,
  "go.lintTool": "golangci-lint",
  "go.survey.prompt": false,
  "go.diagnostic.vulncheck": "Imports",
  "gopls": {
    "formatting.gofumpt": true,
    "ui.codelenses": {
      "run_govulncheck": true
    }
  },
  "go.editorContextMenuCommands": {
    "playground": false,
    "debugTestAtCursor": false
  },

  // Javascript
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.suggest.completeFunctionCalls": true,

  // Typescript
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.surveys.enabled": false,

  // Svelte
  "svelte.enable-ts-plugin": true,

  // Language settings
  "[shellscript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },

  "[toml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}
